{% extends "layout_dashboard.html.twig" %}

{% block title %}

    Dashboard

{% endblock %}


{% block content %}



    <body class="animsition">


    <!-- PAGE CONTAINER-->
    <div class="page-container">
        <!-- MAIN CONTENT-->
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">


                    <div class="row">
                        <div class="col-md-12">
                            <div class="overview-wrap">
                                <h2 class="title-1 m-b-25">Vue d'ensemble</h2>
                                <button class="au-btn au-btn-icon au-btn--blue">

                                    <i class="zmdi zmdi-plus"></i>Ajouter un Produit</button>
                            </div>
                        </div>
                    </div>



                    <div class="row m-t-25">

                        <div class="col-sm-6 col-lg-3">
                            <div class="overview-item overview-item--c1">
                                <div class="overview__inner">
                                    <div class="overview-box clearfix">
                                        <div class="icon">
                                            <i class="zmdi zmdi-account-o"></i>
                                        </div>
                                        <div class="text">
                                            <h2>10368</h2>
                                            <span>Membres Connectés</span>
                                        </div>
                                    </div>
                                    <div class="overview-chart">
                                        <canvas id="widgetChart1"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-6 col-lg-3">
                            <div class="overview-item overview-item--c2">
                                <div class="overview__inner">
                                    <div class="overview-box clearfix">
                                        <div class="icon">
                                            <i class="zmdi zmdi-shopping-cart"></i>
                                        </div>
                                        <div class="text">
                                            <h2>388,688</h2>
                                            <span>Nos Visiteurs</span>
                                        </div>
                                    </div>
                                    <div class="overview-chart">
                                        <canvas id="widgetChart2"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-6 col-lg-3">
                            <div class="overview-item overview-item--c3">
                                <div class="overview__inner">
                                    <div class="overview-box clearfix">
                                        <div class="icon">
                                            <i class="zmdi zmdi-calendar-note"></i>
                                        </div>
                                        <div class="text">
                                            <h2>1,086</h2>
                                            <span>Cette Semaine</span>
                                        </div>
                                    </div>
                                    <div class="overview-chart">
                                        <canvas id="widgetChart3"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="col-sm-6 col-lg-3">
                            <div class="overview-item overview-item--c4">
                                <div class="overview__inner">
                                    <div class="overview-box clearfix">
                                        <div class="icon">
                                            <i class="zmdi zmdi-money"></i>
                                        </div>
                                        <div class="text">
                                            <h2>$1,060,386</h2>
                                            <span>Profit Total</span>
                                        </div>
                                    </div>
                                    <div class="overview-chart">
                                        <canvas id="widgetChart4"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- MAIN CONTENT-->



                    <div class="row">
                        <div class="col-lg-11">
                            <h5 class="title-1 text-center">Gestion des produits</h5>
                            <div class="table-responsive table-responsive-data2">
                                <table class="table table-borderless table-striped table-earning">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom des glaces</th>
                                        <th class="text-left">Prix</th>

                                    </tr>
                                    </thead>

                                    {% for glace in glaces %}
                                        <tbody>
                                        <tr>
                                            <td>{{ glace.id }}</td>
                                            <td>{{ glace.reference }}</td>
                                            <td>{{ glace.prix }}€</td>
                                        </tr>
                                        </tbody>
                                    {% endfor %}
                                </table>
                            </div>
                        </div>






                        <!-- DATA TABLE   -->
                        <div class="row">
                            <div class="col-lg-11">
                                <h5 class="title-1 text-center">Gestion de la Newsletter</h5>

                                <div class="col-md-left">
                                    <div class="table-data__tool">
                                        <div class="table-data__tool-right">
                                            <div class="rs-select2--light rs-select2--md">

                                                <div class="dropDownSelect2"></div>
                                            </div>
                                            <div class="rs-select2--light rs-select2--sm">

                                                <div class="dropDownSelect2"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="table-data__tool">
                                        <div class="table-data__tool-left">
                                            <div class="rs-select2--light rs-select2--md"></div>
                                        </div>
                                        <div class="table-data__tool-right">

                                            <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
                                                <div class="dropDownSelect2"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-11">
                                    <div class="table-responsive table-responsive-data2">
                                        <table class="table table-data2">
                                            <thead class="text-center">
                                            <tr>
                                                <th>
                                                    <label class="au-checkbox">
                                                        <input type="checkbox">
                                                        <span class="au-checkmark"></span>
                                                    </label>
                                                </th>
                                                <th><h4>ID</h4></th>
                                                <th><h4>EMAIL</h4></th>
                                                <th class="text-sm-right"><h4>FONCTIONS</h4></th>
                                            </tr>
                                            </thead>
                                            {% for newsletter in newsletters %}
                                                <tbody class="text-center">
                                                <tr class="tr-shadow">
                                                    <td>
                                                        <label class="au-checkbox">
                                                            <input type="checkbox">
                                                            <span class="au-checkmark"></span>
                                                        </label>
                                                    </td>
                                                    <td>{{ newsletter.id }}</td>
                                                    <td>
                                                        <span class="block-email">{{ newsletter.email }}</span>
                                                    </td>
                                                    <td>
                                                        <div class="table-data-feature">
                                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Send">
                                                                <i class="zmdi zmdi-mail-send"></i>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                                                                <i class="zmdi zmdi-edit"></i>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                                                                <i class="zmdi zmdi-delete"></i>
                                                            </button>
                                                            <button class="item" data-toggle="tooltip" data-placement="top" title="More">
                                                                <i class="zmdi zmdi-more"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr class="spacer"></tr>
                                                </tbody>
                                            {% endfor %}
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <!-- END DATA TABLE -->




                                <div class="mx auto col-lg-10">
                                    <h5 class="title-1 text-center">Gestion des Allergènes</h5>
                                    <div class="table-responsive table-responsive-data2">
                                        <table class="table table-borderless table-striped table-earning">
                                            <thead>
                                            <tr>
                                                <th class="text-left">Les Glaces</th>
                                                {% for allergene in allergenes %}
                                                    <th class="text-center">{{ allergene.name }}</th>
                                                {% endfor %}
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for glace in glaces %}

                                                {#{{ dump(glace.allergenes[0].name) }}#}

                                                <tr>
                                                    <th>{{ glace.reference }}</th>

                                                    {#{% dump getAllergene(glace.allergenes, 'gluten') %}#}
                                                    {#{% for allergene in ['gluten', 'oeuf', 'fruit à coque', 'lait', 'soja'] %}#}

                                                    {% for allergene in allergenes %}
                                                        <td class="text-center">
                                                            {% if isAllergenInIceCrean(glace.allergenes, allergene.name) %}
                                                                X
                                                            {% endif %}
                                                        </td>
                                                    {% endfor %}

                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>

                    </div>
                    <!-- END MAIN CONTENT-->
                    <!-- END PAGE CONTAINER-->
                </div>

            </div>
        </div>
    </div>

    </body>
{% endblock %}